{
  "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
  "organizeImports": {
    "enabled": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "correctness": { "noUnusedImports": "error" }
    },
    "ignore": [
      "src/routeTree.gen.ts"
    ]

  },
  "formatter": {
    "lineWidth": 120,
    "indentStyle": "space",
    "formatWithErrors": true,
    "indentWidth": 2,
    "ignore": [
      "src/routeTree.gen.ts"
    ]
  },
  "javascript": {
    "formatter": {
      "trailingCommas": "es5",
      "quoteStyle": "single",
      "semicolons": "asNeeded"
    },
    "jsxRuntime": "reactClassic"
  },
  "vcs": {
    "clientKind": "git",
    "enabled": true,
    "useIgnoreFile": true
  }
}
